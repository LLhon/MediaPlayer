<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <ImageView
        android:id="@+id/iv_top_left"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_buttom_bg_left" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_top_left"
        android:background="@drawable/img_buttom_bg_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- item1 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_top_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_buttom_btn_press" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_buttom_bt_play" />
        </RelativeLayout>
        <!-- item2 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_top_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_buttom_btn_press" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_buttom_bt_list" />
        </RelativeLayout>
        <!-- item3 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_top_lrc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_buttom_btn_press" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_buttom_bt_lrc" />
        </RelativeLayout>
        <!-- item4 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_top_volumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/xml_buttom_btn_press" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_volume_btn" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>