<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
              android:layout_weight="0"
    android:layout_alignParentBottom="true"
    android:background="@drawable/img_playback_bg"
    android:orientation="horizontal" >

    <!-- item1 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ib_bottom_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_buttom_btn_press" />

        <ImageView
            android:id="@+id/iv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_playmode_normal" />
    </RelativeLayout>
    <!-- item2 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ib_bottom_last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_buttom_btn_press" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_playback_bt_last" />
    </RelativeLayout>
    <!-- item3 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ib_bottom_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_buttom_btn_press" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/play_icon" />
    </RelativeLayout>
    <!-- item4 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ib_bottom_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_buttom_btn_press" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_playback_bt_next" />
    </RelativeLayout>
    <!-- item5 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/ib_bottom_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_buttom_btn_press" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_buttom_bt_menu" />
    </RelativeLayout>

</LinearLayout>